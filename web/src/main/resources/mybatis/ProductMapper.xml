<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Complain">
	<resultMap type="Complain"  id="complain" >
		<id property="id" column="id" javaType="java.lang.String" />
		<result property="userId" column="user_id" javaType="java.lang.String" />
		<result property="tripId" column="trip_id" javaType="java.lang.String" />
		<result property="comment" column="comment" javaType="java.lang.String" />
		<result property="anonymous" column="anonymous" javaType="java.lang.Integer" />
	</resultMap>

	<insert id="saveComplain" parameterType="Complain">
		insert into
		complain(id, user_id, trip_id, comment, anonymous) values (
		#{id}, #{userId}, #{tripId}, #{comment}, #{anonymous})
	</insert>
	
</mapper>